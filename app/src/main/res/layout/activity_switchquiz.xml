<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_span="3"
    android:layout_weight="3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1 + 1 = 2"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2 + 2 = 5"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4 + 1 = 5"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switch1"
                style="@style/TextAppearance.AppCompat.Widget.Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="15dp"
                android:checked="true"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:showText="true"
                android:splitTrack="false"
                android:switchPadding="@dimen/default_gap"
                android:switchTextAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
                android:textOff="SAI"
                android:textOn="ĐÚNG"
                android:thumb="@android:drawable/dialog_holo_light_frame"
                android:thumbTint="@android:color/holo_blue_light"
                android:track="@android:drawable/dialog_holo_light_frame"
                android:trackTint="#FFD9D9D9"
                tools:checked="true" />

            <Switch
                android:id="@+id/switch2"
                style="@style/TextAppearance.AppCompat.Widget.Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="15dp"
                android:checked="true"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:showText="true"
                android:splitTrack="false"
                android:switchPadding="@dimen/default_gap"
                android:switchTextAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
                android:textOff="SAI"
                android:textOn="ĐÚNG"
                android:thumb="@android:drawable/dialog_holo_light_frame"
                android:thumbTint="@android:color/holo_blue_light"
                android:track="@android:drawable/dialog_holo_light_frame"
                android:trackTint="#FFD9D9D9"
                tools:checked="true" />

            <Switch
                android:id="@+id/switch3"
                style="@style/TextAppearance.AppCompat.Widget.Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="15dp"
                android:checked="true"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:showText="true"
                android:splitTrack="false"
                android:switchPadding="@dimen/default_gap"
                android:switchTextAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
                android:textOff="SAI"
                android:textOn="ĐÚNG"
                android:thumb="@android:drawable/dialog_holo_light_frame"
                android:thumbTint="@android:color/holo_blue_light"
                android:track="@android:drawable/dialog_holo_light_frame"
                android:trackTint="#FFD9D9D9"
                tools:checked="true" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnpr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_light"
            android:gravity="center|center_horizontal"
            android:text="&lt;"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_light"
            android:gravity="center|center_horizontal"
            android:text="RESULT"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_light"
            android:gravity="center|center_horizontal"
            android:text="&gt;"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>